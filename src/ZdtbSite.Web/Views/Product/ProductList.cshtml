@model PagedList.IPagedList<ZdtbSite.Model.Product>
@using System.Web.Optimization
@using ZdtbSite;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Header{
    <link href='http://fonts.useso.com/css?family=PT+Sans:400,400italic,700,700italic' rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="~/stylesheets/style.css" />
    <link rel="stylesheet" href="~/stylesheets/responsive.css" />
    <link rel="stylesheet" href="~/stylesheets/nivoslider.css" />
    <script src="~/scripts/jquery.min.js"></script>
    <script src="~/scripts/jquery.bxSlider.min.js"></script>
    <script src="~/scripts/jquery.nivo.slider.js"></script>
    <script src="~/scripts/jquery.blackandwhite.min.js"></script>
    <script src="~/scripts/js_func.js"></script>
    <script>
        $(function () {
            $('#slider').nivoSlider({
                controlNav: false
            });
            $('.post_slider').bxSlider({
                auto: false,
                speed: 1000
            });
            $('.clients_slider').bxSlider({
                auto: false,
                controls: false,
                mode: 'fade',
                pager: true
            });
            $('.bwWrapper').BlackAndWhite({
                hoverEffect: true,
                webworkerPath: false,
                responsive: true,
                invertHoverEffect: false
            });
        })
    </script>
}

<!-- nivo slider -->
<div class="nivo-wrap">
    <div class="wraper">
        <!--<div class="fallback"><img src="images/sliders/home_page_4/fallback.png" alt="" /></div>-->
        <div class="slider-wrapper theme-default">
            <div id="slider" class="nivoSlider">
                <img src="~/images/ProductType/BoxSubstation.jpg" width="933" height="377" data-thumb="~/images/features/img.png" alt="" title="#htmlcaption" />
                <img src="~/images/ProductType/PowerTransformer.jpg" width="933" height="377" data-thumb="~/images/features/img.png" alt="" title="#htmlcaption2" />
                <img src="~/images/ProductType/switchgear.jpg" width="933" height="377" data-thumb="~/images/features/img.png" alt="" title="#htmlcaption3" />
            </div>
            <div id="htmlcaption" class="dd nivo-html-caption">
                <span class="tit">Minnan's</span><strong class="tit2">Box Substation</strong>
            </div>
            <div id="htmlcaption2" class="dd nivo-html-caption">
                <span class="tit">Minnan's</span><strong class="tit2">Transformer</strong>
            </div>
            <div id="htmlcaption3" class="dd nivo-html-caption">
                <span class="tit">Minnan's</span><strong class="tit2">Switchgear</strong>
            </div>
        </div>
    </div>
</div>
<!-- /nivo slider -->

<div class="content_block">
    <!-- text bar2 -->
    @Html.Partial("_BuyMinnan")
    <!-- /text bar2 -->
    <div class="wraper">
        <!-- blog entries full -->
        <div class="blog_entries blog_entries_full">
            @foreach (var item in Model)
            {
                <div class="post post_medium">
                    <div class="img_wrap bwWrapper">
                        <div class="date">@item.CreateTime.ToString("MM/dd/yyyy")</div>
                        <a href="@Url.Action("ProductDetail", "Product", new { id = item.Id })"><img src="@item.ImageUrl" width="493" height="249" alt="" /></a>
                    </div>
                    <div class="desc">
                        <h4><a href="@Url.Action("ProductDetail", "Product", new { id = item.Id })">@item.Name</a></h4>
                        <p>
                            @{
                string des = item.Description;
                            }
                            @des.ReplaceHtml().strSub(0, 250, "...")
                        </p>
                        <div class="metadata">
                            @*<strong class="dots">....</strong>*@
                            <a href="@Url.Action("ProductDetail", "Product", new { id = item.Id })" class="read_more btn_col">Read More</a>
                        </div>
                    </div>
                </div>
            }
            <!-- pager_nav-->
            <div class="pager_nav">

                @Html.Partial("_PartialPage", Model)
                @*<a href="#">1</a><span>2</span><a href="#">3</a><a href="#">4</a><a href="#">5</a>
                    <a href="#" class="bx-prev">prev</a><a href="#" class="bx-next">next</a>*@
            </div>
            <!-- /pager_nav -->
        </div>
        <!-- /blog entries full -->
    </div>
</div>