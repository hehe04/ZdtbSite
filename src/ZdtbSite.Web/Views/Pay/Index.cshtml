@model ZdtbSite.Web.Models.PayViewModel


@using System.Web.Optimization;
@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}


@section Header{
    <style>
        .wraper header nav a {
            -moz-box-sizing: initial;
            -webkit-box-sizing: initial;
            box-sizing: initial;
        }
    </style>

    @Styles.Render("~/Style/AboutIndex")
    @Scripts.Render("~/Script/ArticleIndex")
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <link href="~/Stylesheets/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Stylesheets/bootstrap-theme.min.css" rel="stylesheet" />
    <script>
        $(function () {
            $('.clients_slider').bxSlider({
                auto: false,
                controls: false,
                mode: 'fade',
                pager: true
            });
            $('.post_slider').bxSlider({
                auto: false,
                speed: 1000
            });
            $('.recent_slider').bxSlider({
                auto: false,
                displaySlideQty: 1,
                moveSlideQty: 1,
                speed: 1000
            });
            $('#faq').dltoggle();
            $("#open").click(function (event) {
                $('#faq').dltoggle_show();
                return false;
            });
            $("#close").click(function (event) {
                $('#faq').dltoggle_hide();
                return false;
            });
            $('.bwWrapper').BlackAndWhite({
                hoverEffect: true,
                webworkerPath: false,
                responsive: true,
                invertHoverEffect: false
            });
            $("#braintree-paypal-button").click(function () {
                $("#Payform").submit();
            });
        })
    </script>
}

<div class="content_block">
    <!-- top_title -->
    <div class="top_title">
        <div class="wraper">
            <h2>Welcome <span>please pay after detailed view product!</span></h2>
            <ul>
                <li><a href="#">Home</a></li>
                <li>Pay</li>
            </ul>
        </div>
    </div>
    <!-- /top_title -->
    <div class="wraper">
        <!-- blog entries full -->
        <div class="blog_entries blog_entries_full">
            <div style="min-height:400px">
                <form id="Payform" class="form-horizontal" role="form" action="@Url.Action("Process")" method="post">
                    <div class="form-group">
                        @*<label for="Name" class="col-md-2 control-label">姓名</label>*@
                        @Html.LabelFor(e => e.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(e => e.Name, new { @class = "form-control", placeholder = "Please enter a name" })
                            @*<input type="text" class="form-control" id="Name" placeholder="请输入邮箱">*@
                        </div>
                        <div class="col-md-3">
                            @Html.ValidationMessageFor(e => e.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        @*<label for="Email" class="col-md-2 control-label">邮箱</label>*@
                        @Html.LabelFor(e => e.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(e => e.Email, new { @class = "form-control", placeholder = "Please enter the mail" })
                            @*<input type="email" class="form-control" id="Email" placeholder="请输入邮箱">*@
                        </div>
                        <div class="col-md-3">
                            @Html.ValidationMessageFor(e => e.Email)
                        </div>
                    </div>
                    <div class="form-group">
                        @*<label for="Phone" class="col-md-2 control-label">联系方式</label>*@
                        @Html.LabelFor(e => e.Phone, new { @class = "col-md-2 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(e => e.Phone, new { @class = "form-control", placeholder = "Please enter the phone" })
                            @*<input type="text" class="form-control" id="Phone" placeholder="请输入联系方式">*@
                        </div>
                        <div class="col-md-3">
                            @Html.ValidationMessageFor(e => e.Phone)
                        </div>
                    </div>
                    <div class="form-group">
                        @*<label for="Money" class="col-md-2 control-label">输入金额</label>*@
                        @Html.LabelFor(e => e.Amount, new { @class = "col-md-2 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(e => e.Amount, new { @class = "form-control", placeholder = "Please input the advance payment" })
                            @*<input type="text" class="form-control" id="Money" placeholder="请输入金额">*@
                        </div>
                        <div class="col-md-3">
                            @Html.ValidationMessageFor(e => e.Amount)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <span style="font-weight: bold; color: #666;font-size: 13px;">Pay with &nbsp;</span>
                            <a id="braintree-paypal-button" href="#" style="margin-top:10px;margin-left:10px; display: block; width: 115px; height: 44px; overflow: hidden;">
                                <img src="~/Images/pay-with-paypal.png" style="max-width: 100%; display: block; width: 100%; height: 100%; outline: medium none; border: 0px none;" alt="Pay with PayPal" />
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
