@model IEnumerable<ZdtbSite.Model.ContentType>
@{
    IEnumerable<ZdtbSite.Web.Models.ProductViewModel> ProductRecommendList = ViewBag.ProductRecommendList;
}

<!-- sidebar -->
<div class="sidebar">
    <!-- most popular -->
    @Html.Partial("_ProductRecommend", ProductRecommendList)
    <!-- /most popular -->
    <!-- latest tweets -->
    @Html.Partial("_OnlineService")
    <!-- /latest tweets -->
    <!-- acc tabs -->
    <div class="acc_tabs">
        <div id="tabs">
            <ul class="tab_select">
                <li><a href="#tab-2">Categories</a></li>
            </ul>
            <div id="tab-2">
                <ul>
                    @foreach (var contentype in Model)
                    {
                        <li><a href="@Url.Action("TechnologySupportIndex", "about", new { catelog = contentype.Id })">@contentype.Name</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <!-- /acc tabs -->
    <!-- our clients -->
    @Html.Partial("_Feedback")
    <!-- /our clients -->
</div>
<!-- /sidebar -->
