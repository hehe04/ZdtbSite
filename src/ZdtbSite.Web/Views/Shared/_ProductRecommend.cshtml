@model IEnumerable<ZdtbSite.Web.Models.ProductViewModel>

<div class="most_popular">
    <h4>Most Popular Series</h4>
    <ul>
        @if (Model != null)
        {
            foreach (var productViewModel in Model)
            {
                <li>
                    <div class="bwWrapper"><a href="@Url.Action("ProductDetail", "Product", new { Id = productViewModel.Id })"><img src="@Url.Content(productViewModel.ThumbnailUrl)" width="60" height="55" alt="" /></a></div>
                    <div class="desc">
                        <p><strong><a href="@Url.Action("ProductDetail", "Product", new { Id = productViewModel.Id })">@productViewModel.Name</a></strong></p>
                        <p>...</p>
                    </div>
                </li>
            }
        }
    </ul>
</div>
