            @{
                foreach (var item in Model)
                {
                    <div class="post post_medium">
                        <div class="img_wrap bwWrapper">
                            <div class="date">@item.UpdateDateTime.ToString("MM/dd/yyyy")</div>
                            <a href="@Url.Action("Detail", "Article",new{ id= item.Id})"><img src="@item.ImgUrl" width="493" height="249" alt="" /></a>
                        </div>
                        <div class="desc">
                            <h4><a href="@Url.Action("Detail", "Article", new { id = item.Id })">@item.Title</a></h4>
                            <p>
                                @item.Content.ReplaceHtml().strSub(0, 200, "")....
                            </p>
                            <div class="metadata">
                                @*<strong class="dots">....</strong>
                                    By <a href="#">Ken Wallingford</a>*@
                                <a href="@Url.Action("Detail", "Article", new { id = item.Id })" class="read_more btn_col">Read More</a>
                            </div>
                        </div>
                    </div>
                }
            }
