@model IEnumerable<ZdtbSite.Web.Areas.ZdtbAdmin.Models.ProductTypeViewModel>
@{
    ViewBag.Title = "产品模块 > 类型维护";
}
@section PageHeader{
    产品模块 > 类型维护
}
<script type="text/javascript">
    $(function () {

    });
    function Remove() {
        debugger;
    }
</script>
<div class="fluid-container">
    <div style="padding-bottom:10px">
        <a class="btn btn-primary" href="@Url.Action("Add")">
            <i class="icon-ok-sign icon-white"></i> 添加
        </a>
        <a class="btn btn-warning" href="javascript:void(0);">
            <i class="icon-edit icon-white"></i> 修改
        </a>
        <a class="btn btn-danger" href="javascript:void(0);" onclick="Remove" id="Remove">
            <i class="icon-remove icon-white"></i> 删除
        </a>
        <a class="btn btn-inverse" href="javascript:void(0);">
            <i class="icon-share-alt icon-white"></i> 权限分配
        </a>
    </div>
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-md-12">
                <!-- new widget -->
                <div class="jarviswidget jarviswidget-sortable" role="widget">
                    <header role="heading">
                        <h2>用户</h2>
                    </header>
                    <!-- wrap div -->
                    <div>
                        <div class="inner-spacer">
                            <!-- content goes here -->
                            <table class="table table-bordered table-striped checked-in responsive has-checkbox" id="sc-table">
                                <thead>
                                    <tr>
                                        <th class="first"><i class="icon-resize-vertical"></i></th>
                                        <th>类型名称</th>
                                        <th>父节点</th>
                                        <th>创建人</th>
                                        <th>创建时间</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <input type="checkbox" value="@item.Id">
                                            </td>
                                            <td>
                                                @item.TypeName
                                            </td>
                                            <td>
                                                @{
                                        var prentModel = Model.Where(e => e.Id.Equals(item.ParentId)).FirstOrDefault();
                                                }
                                                @(prentModel == null ? "根节点" : prentModel.TypeName)
                                            </td>
                                            <td>
                                                @item.CreateUser
                                            </td>
                                            <td>
                                                @item.CreateDateTime
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <div class="dt-footer">
                                <div class="row">
                                    <div class="col-md-6 visible-md visible-lg">
                                        <div class="dataTables_info" id="dtable_info">当前页/总页数 : 1/20</div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="dataTables_paginate paging_bootstrap pagination">
                                            <ul class="pagination">
                                                <li class="prev disabled"><a href="#">← Previous</a></li>
                                                <li class="active"><a href="#">1</a></li>
                                                <li><a href="#">2</a></li>
                                                <li><a href="#">3</a></li>
                                                <li><a href="#">4</a></li>
                                                <li><a href="#">5</a></li>
                                                <li class="next"><a href="#">Next → </a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end content-->
                    </div>
                    <!-- end wrap div -->
                </div>
                <!-- end widget -->
            </article>
        </div>


    </section>

</div>
