@model ZdtbSite.Web.Areas.ZdtbAdmin.Models.UserViewModel

@section PageHeader{
    用户管理 > 编辑用户
}
@{
    ViewBag.Title = "编辑用户";
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}

<div class="fluid-container">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-md-12">
                <!-- new widget -->
                <div class="jarviswidget" id="widget-id-0" role="widget">
                    <header>
                        <h2>用户信息</h2>
                    </header>
                    <div>

                        <div class="inner-spacer">
                            <!-- content goes here -->
                            <form class="form-horizontal themed" method="post" action="@Url.Action("Modify")">
                                <fieldset>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-3">@Html.LabelFor(m => m.UserName)</div>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control disabled", autofocus = "", @readonly = "readonly" })
                                                @Html.ValidationMessageFor(m => m.UserName)
                                                @*<input type="text" class="form-control" id="input01" />*@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-3">@Html.LabelFor(m => m.Email)</div>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Email)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-3">@Html.LabelFor(m => m.Mobile)</div>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Mobile)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-3">@Html.LabelFor(m => m.IsActive)</div>
                                            <div class="col-md-9">
                                                <label class="checkbox">
                                                    @Html.CheckBoxFor(m => m.IsActive, new { value = "true" }) 是否锁定
                                                </label>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row" style="text-align:right">
                                            <div class="col-md-12">
                                                @Html.HiddenFor(e => e.Id)
                                                @Html.HiddenFor(e => e.Password)
                                                @Html.HiddenFor(e => e.LastLoginDateTime)
                                                @Html.HiddenFor(e => e.LoginErrorCount)
                                                @Html.HiddenFor(e => e.AuthorityUrl)
                                                @Html.HiddenFor(e => e.CreateDateTime)
                                                <button type="reset" name="name" class="btn btn-danger">
                                                    <i class="icon-repeat icon-white"></i> 重置
                                                </button>
                                                <button type="submit" name="name" class="btn btn-primary">
                                                    <i class="icon-ok-sign icon-white"></i> 保存
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section script{
    @Html.Partial("ImportFormPageJs")
}